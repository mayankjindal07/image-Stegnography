<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alata"
        android:text="@string/slide_4_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#528BFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="25dp"
        app:srcCompat="@drawable/warning" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/alata"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="@string/slide_4_desc"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryBlack"
        android:textSize="@dimen/slide_desc" />

    <ImageView
        android:id="@+id/imageWhatsappx"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/imageWhatsapp"
        android:layout_marginStart="-35dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="47dp"
        android:layout_toStartOf="@+id/imageFb"
        app:srcCompat="@drawable/wappp" />

    <ImageView
        android:id="@+id/imageFb"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/imageFbx"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="67dp"
        app:srcCompat="@drawable/insta" />


</RelativeLayout>